{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }

    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"

    }
  ],
  "routes": [
    {

      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {

      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
    "VITE_API_URL": "https://your-backend-url.vercel.app"
  }
}
